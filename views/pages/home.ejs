                <tr>
                    <th>
                        Number
                    </th>
                  <th>
                        Name
                    </th>
                    <th>
                        Ingredients
                    </th>
                </tr>
            </thead>
            <tbody>
                <%for(var i=0;i< data.length;i++){%>
                <tr>
                    <td>
                        <%=i+1%>
                    </td>
                    <td>
                     <%=data[i].name%>
                    </td>
                    <td>
                      <%=data[i].ingredients.ingredient%>
                    </td>
                </tr>
                <%}%>
            </tbody>
        </table>
    </div>
