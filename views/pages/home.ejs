<h1>Node App with MongoDB in Docker containers</h1>
  <form method="post" action="/item/add">
    <label for="name">Input</label>
    <input type="text" name="name">
    <input type="submit" value="Add">
  </form>
<form id="search" action="/search_ing" method="get" class="form-inline">
    <div class="form-group">
        <input type="text" class="form-control" id="q" name="q" placeholder="Search...">
    </div>
    <button type="submit" class="btn btn-primary">Search users</button>
</form>

    <%if(data.length>0){%>
